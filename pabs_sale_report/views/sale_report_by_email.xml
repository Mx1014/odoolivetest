                                            <td class="text-right" style=" padding-left: 2em"
                                                t-if="o.type not in ['out_invoice']">
                                                <span t-esc="'{:,.3f}'.format((line.price_unit * line.quantity) - line.discount_exc)"/>
                                            </td>
                                            <td class="text-center" style="padding-left: 1em">
                                                <span t-esc="'{:,.0f}'.format(line.tax_ids.amount)"
                                                      t-options="{&quot;widget&quot;: &quot;False&quot;, &quot;display_currency&quot;: o.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                        <t t-set="count" t-value="count + 1"/>
