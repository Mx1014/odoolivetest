<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="tax_invoice_email_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header">
                        <img t-att-src="'/pabs_sale_report/static/src/img/AlSalam_IT.png'"
                             style="max-height:180px"/>
                    </div>
                    <div style="color:black;" class="page">
                        <div style="position:fixed">
                            <strong style="">TRN:</strong>
                            <span t-field="o.company_id.vat"/>
                        </div>
                        <div style="">
                            <center>
                                <div align="center" style="padding-top:5mm">
                                    <h1>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Tax Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice
                                        </span>
                                        <span t-if="o.type == 'out_refund'">Tax Credit Note</span>
                                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                                    </h1>
                                </div>
                            </center>
                        </div>

                        <div style="float:left; padding-bottom:5mm">
                            <table>
                                <tr>
                                    <td style="width:140px" t-if="o.type not in ['in_refund','in_invoice']">
                                        <strong style="">Customer Name:</strong>
                                    </td>
                                    <td style="width:140px" t-if="o.type in ['in_refund','in_invoice']">
                                        <strong style="">Vendor Name:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.partner_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td t-if="o.type not in ['in_refund','in_invoice']">
                                        <strong style="">Customer Code:</strong>
                                    </td>
                                    <td t-if="o.type in ['in_refund','in_invoice']">
                                        <strong style="">Vendor Code:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.partner_id.x_code"/>
                                    </td>
                                </tr>
                                <t t-if="o.sale_order_type != 'cash_memo'">
                                    <tr t-if="o.partner_id.x_code != '682843'">
                                        <td>
                                            <strong style="">Delivery Address:</strong>
                                        </td>
                                        <t t-if="o.partner_shipping_id.street_number or o.partner_shipping_id.x_address_block or o.partner_shipping_id.x_address_road">
                                            <td>
                                                <t t-if="o.partner_shipping_id.street_number">
                                                    <strong>H:</strong>
                                                    <span t-field="o.partner_shipping_id.street_number"/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.x_flat">
                                                    <strong style="padding-left:2mm">F:</strong>
                                                    <span t-field="o.partner_shipping_id.x_flat"/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.x_address_road">
                                                    <strong style="padding-left:2mm">, R:</strong>
                                                    <span t-field="o.partner_shipping_id.x_address_road"/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.x_address_block">
                                                    <strong style="padding-left:2mm">, B:</strong>
                                                    <span t-field="o.partner_shipping_id.x_address_block"/>
                                                </t>
                                                <t t-if="o.partner_shipping_id.city_id">
                                                    <strong style="padding-left:2mm">, C:</strong>
                                                    <span t-field="o.partner_shipping_id.city_id"/>
                                                </t>
                                            </td>

                                            <!--                                    <t t-else=""/>-->
                                            <!--                                    <td>-->
                                            <!--                                        <strong style="">Invoice Address:</strong>-->
                                            <!--                                        <span t-field="o.partner_shipping_id.x_other_address"/>-->
                                            <!--                                    </td>-->
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-field="o.partner_shipping_id.x_other_address"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <t t-if="o.sale_order_type == 'cash_memo'">
                                    <tr t-if="o.partner_id.x_code != '682843'">
                                        <td>
                                            <strong style="">Delivery Address:</strong>
                                        </td>
                                        <td>
                                            <span>Self Collection</span>
                                        </td>
                                    </tr>
                                </t>


                                <!--                                <tr>-->
                                <!--                                    <t t-if="o.partner_shipping_id.street_number == False">-->
                                <!--                                        <td>-->
                                <!--                                            <strong style="">Invoice Address:</strong>-->
                                <!--                                        </td>-->
                                <!--                                        <td>-->
                                <!--                                            <span t-field="o.partner_shipping_id.x_other_address"/>-->
                                <!--                                        </td>-->
                                <!--                                    </t>-->
                                <!--                                </tr>-->
                                <tr>
                                    <td>
                                        <strong style="">Phone:</strong>
                                    </td>
                                    <td>
                                        <t t-if="o.partner_id.phone">
                                            <span t-field="o.partner_id.phone"/>
                                        </t>
                                        <t t-if="o.partner_id.mobile">
                                            /
                                            <span t-field="o.partner_id.mobile"/>
                                        </t>
                                        <t t-if="o.partner_id.x_mobile">
                                            /
                                            <span t-field="o.partner_id.x_mobile"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td t-if="o.type not in ['in_refund','in_invoice']">
                                        <strong style="">Customer TRN:</strong>
                                    </td>
                                    <td t-if="o.type in ['in_refund','in_invoice']">
                                        <strong style="">Vendor TRN:</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.partner_id.vat"/>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div style="float:right; padding-bottom:5mm">
                            <table>
                                <tr>
                                    <t t-if="o.type in ['out_refund','in_refund']">
                                        <td style="width:130px">
                                            <strong style="">Credit Note:</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <tr>
                                    <t t-if="o.type in ['out_refund','in_refund']">
                                        <td>
                                            <strong style="">Credit Note Date:</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.date"/>
                                        </td>
                                    </t>
                                </tr>

                                <tr>
                                    <t t-if="o.type in ['out_refund','in_refund']">
                                        <td style="width:130px">
                                            <strong style="">Invoice#:</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.reversed_entry_no"/>
                                        </td>
                                    </t>
                                </tr>

                                <tr>
                                    <t t-if="o.type in ['out_refund','in_refund']">
                                        <td>
                                            <strong style="">Invoice Date:</strong>
                                        </td>
                                        <td>
                                            <span t-field="o.reversed_entry_date"/>
                                        </td>
                                    </t>
                                </tr>

