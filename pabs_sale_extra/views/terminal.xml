<odoo>
    <record id="sale_terminal_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.terminal.view.form.inherit</field>
        <field name="model">sale.terminal</field>
        <field name="inherit_id" ref="pabs_sale.sale_terminal_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="allowed_team"/>
                <!--                <field name="member_ids" invisible="1"/>-->
                <!--                <field name="allowed_user" domain="[('id', 'in', member_ids)]" attrs="{'invisible': [('allowed_team','=', False)]}"/>-->
                <field name="allowed_payment_method" widget="many2many_tags"/>
                <!--                <field name="allowed_journal" widget="many2many_tags" domain="[('type', 'in', ('bank', 'cash'))]"/>-->
                <field name="min_threshold"/>
                <field name="payment_method_domain" invisible="1"/>
            </field>
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Tids">
                        <field name="tid_lines">
                            <tree editable="bottom" string="TID">
                                <field name="payment_methods"
                                       domain="[('id','not in', parent.payment_method_domain), ('bank_type', '=', 'card')]"
                                       required="1"/>
                                <field name="tid_ids" widget="many2many_tags"
                                       domain="[('payment_methods', '=', payment_methods)]"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Configure">
                        <group>
                            <field name="short_name" required="1"/>
                            <label for="sequence_number_next"/>
                            <div>
                                <field name="sequence_number_next" style="padding-right: 1.0em"/>
                                <field name="sequence_id" required="0" attrs="{'readonly': 0}"
                                       groups="base.group_no_one"/>
                            </div>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


