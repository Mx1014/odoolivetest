    <record id="sale_statement_cashbox_close_view_form" model="ir.ui.view">
        <field name="name">sale.statement.cashbox.close.form</field>
        <field name="model">sale.statement.cashbox.close</field>
        <field name="arch" type="xml">
            <form string="Cash Control">
                <sheet>
                    <!--                        <field name="start_bank_stmt_ids" invisible="0"/>-->
                    <!--                        <field name="session_id" invisible="0"/>-->
                    <field name="currency_id" invisible="1"/>
                    <field name="session_id" invisible="1"/>
                    <field name="session_state" invisible="1"/>
                    <field name="cashbox_close_line_ids" nolabel="1"
                           context="{'default_currency_id': currency_id}"
                           attrs="{'readonly': [('session_state','=', 'confirm')]}">
                        <tree editable="bottom" delete="false" create="false">
                            <field name="currency_id" invisible="1"/>
                            <field name="number"/>
                            <field name="coin_value" readonly="1"
                                   force_save="1"/> <!-- widget="monetary" options="{'currency_field': 'currency_id'}"-->
                            <field name="subtotal"/>
                        </tree>
                    </field>
                    <div>
                        <group>
                            <group class="oe_subtotal_footer oe_right" cols="6">
                                <field name="currency_id" invisible="1"/>
                                <div class="o_td_label"/>
                                <field name="total_openings" readonly="1" invisible="0"/>
                                <field name="total"/>
                                <field name="difference" readonly="1"/>
                            </group>
                        </group>
                    </div>
                </sheet>
                <footer>
                    <button string='confirm' type="object" class="btn-primary" name="validate_close_cashbox"
                            groups="sales_team.group_sale_manager" invisible="context.get('close', False)"/>
                    <button string='Save' type="object" class="btn-primary" name="save_draft"
                            invisible="context.get('close_save', False)"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

