                             <field name="name"/>
                             <field name="statement_id"/>
                        </group>
                        <group>
                             <field name="bank_id"/>
                             <field name="cheque_date"/>
                             <field name="cheque_type"/>
                             <field name="cheque_number"/>
                             <field name="account_number"/>
                        </group>
                         <group>
                             <field name="tid"/>
                             <field name="auth"/>
