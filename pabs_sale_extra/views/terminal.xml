    <record id="account_payment_transfer_view_form_inherit" model="ir.ui.view">
        <field name="name">Transfer</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_number']" position="after">
                <field name="statement_id" invisible="1"/>
                <field name="x_bank_statement_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='communication']" position="after">
                <field name="x_cashbox_id" widget="one2many"
                       attrs="{'invisible': ['|', ('x_cashbox_id','=', []),('payment_type', '!=', 'transfer')]}">
                    <tree editable="bottom" delete="false">
                        <field name="currency_id" invisible="1"/>
                        <field name="number"/>
                        <field name="coin_value" readonly="1"
                               force_save="1"/>
                        <field name="subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//field[@name='payment_type']" position="before">
                <field name="x_voucher_no" attrs="{'invisible': [('statement_id','=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_type']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('x_bank_statement_id', '!=', False),('statement_id','!=',
                    False),('payment_type','=', 'transfer')]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('amount', '=', 0), ('state', '!=', 'draft')], 'readonly': ['|',
                    ('x_bank_statement_id', '!=', False), ('statement_id','!=', False),('payment_type','=',
                    'transfer')]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='destination_journal_id']" position="attributes">
                <attribute name="attrs">{'required': [('payment_type', '=', 'transfer')], 'invisible': [('payment_type',
                    '!=', 'transfer')], 'readonly': [('statement_id','!=', False),('payment_type','=', 'transfer')]}
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="account_user_statement_view_line_search" model="ir.ui.view">
        <field name="name">account.user.statement.line.form</field>
        <field name="model">account.user.statement.line</field>
        <field name="arch" type="xml">
            <search string="Search Journal">
                <field name="journal_id"/>
                <group expand="0" string="Group By">
                    <filter string="Journal" name="journal_id" context="{'group_by': 'journal_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="account_user_statement_view_line_form" model="ir.ui.view">
        <field name="name">account.user.statement.line.form</field>
        <field name="model">account.user.statement.line</field>
        <field name="arch" type="xml">
            <form>
                 <div class="oe_title">
                        <h1>
