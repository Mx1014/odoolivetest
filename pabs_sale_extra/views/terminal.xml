            <!--                        <field name="card_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>-->
            <!--                    </group>-->
            <!--                </group>-->
            <!--            </xpath>-->
            <xpath expr="//group//group[2]" position="replace">
                <group class="oe_subtotal_footer oe_right" colspan="7" name="closing_total">
                    <field name="balance_start" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="transaction" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="balance_end" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="cash_on_hand" widget="monetary" options="{'currency_field': 'currency_id'}"/>
