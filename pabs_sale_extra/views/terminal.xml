                        name="%(pabs_sale_extra.sale_statement_cashbox_close_view_form_action)d" type="action"
                        string="Closing Cash"
                        context="{'default_session_id': id, 'default_cashbox_close_line_ids': close_cash_ids, 'default_total_openings': total_closing, 'close': True}"
                        attrs="{'invisible': [('close_cash_ids','=', [])]}"/>
