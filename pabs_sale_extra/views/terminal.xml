                <field name="x_master_cashier" invisible="1"/>
                <field name="x_current_session_state" invisible="1"/>
            </field>
            <field name="coin_value" position="attributes">
                <attribute name="attrs">{'readonly': [('x_current_session_state', '!=', False)]}</attribute>
            </field>
             <field name="number" position="attributes">
