<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cancel_task_batch_view_form" model="ir.ui.view" >
            <field name="name">Confirm Cancellation</field>
            <field name="model">cancel.task.batch</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <p>Cancelling this visit sheet will remove all the tasks from it. Are you sure you want to cancel this visit sheet?</p>
                    </sheet>
                    <footer>
                        <button string="Confirm" class="btn btn-primary" name="cancel_batch_confirm" type="object" />
                        <button string="Discard" class="btn btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>