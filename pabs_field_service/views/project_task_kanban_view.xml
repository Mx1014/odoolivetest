<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_task_view_kanban_fsm_inherit_pabs_field_service" model="ir.ui.view">
            <field name="name">project.task.view.kanban.fsm.inherit.pabs.field.service</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="industry_fsm.project_task_view_kanban_fsm"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_kanban_record_headings']//t[@t-if='record.partner_id.value']"
                       position="inside">
                    <br/>
                    <span>
                        <field name="partner_phone"/>
                        <t t-if="record.partner_phone.value and record.partner_mobile.value"> / </t>
                        <field name="partner_mobile"/>

                    </span>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
